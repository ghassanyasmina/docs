          {
            "name": "property_cost",
            "in": "query",
            "schema": {
              "type": "number"
            },
            "required": false
          },
          {
            "name": "contents_cost",
            "in": "query",
            "schema": {
              "type": "number"
            },
            "required": false
          }
        ],
        "x-validation": {
          "anyOf": [
            {
              "required": [
                "property_cost"
              ]
            },
            {
              "required": [
                "contents_cost"
              ]
            }
          ]
        },
        "responses": {
          "200": {
            "description": "Lists prices",
